<!-- Master.view.xml-->
<mvc:View xmlns:mvc="sap.ui.core.mvc" controllerName="sapui5.demo.odata.readingdata.bestpractice.controller.Master" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
	<Page title="Product {ProductID} Info" binding="{/Products(1)}">
		<content>
			<List id="productList" class="sapUiResponsiveMargin" width="auto" items="{/Products}">
				<headerToolbar>
					<Toolbar>
						<Title text="ProductsinStock"/>
						<ToolbarSpacer/>
						<SearchField width="50%" search="onFilterProducts"/>
					</Toolbar>
				</headerToolbar>
				<items>
					<ObjectListItem title="{UnitsInStock} x{ProductName}"
						number="{ parts: [{path:'UnitPrice'},'EUR'], type: 'sap.ui.model.type.Currency', formatOptions: {showMeasure:false} }" numberUnit="EUR"></ObjectListItem>
				</items>
			</List>
		</content>
	</Page>
</mvc:View>